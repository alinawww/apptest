<h2>Updated project</h2>
<hr>
<div class="screenshot" style="background:url(<%= @project.avatar.url%>) center; background-size:cover; height:200px"></div>
<h3><%= @project.name%></h3>
<p><%= @project.description%></p>
<div class="tags">
  <%@project.tag_list.each do |tag|%>
  <span class="label">
    <%= link_to tag, tag_path(tag)%>
  </span>
  <%end%>
</div>
  <%= form_for [@user, @project, @rating], :url => user_project_ratings_path(@user.id, @project.id), method: 'POST' do |f|%>

    <select class="show">
      <option value="1">1</option>
      <option value="2">2</option>
    </select>
    <%= f.submit "Rate this Project"%>
  <%end %>

<br>
<%= link_to "Back to my profile", current_user%>
