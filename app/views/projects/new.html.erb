<h1>create a new project</h1>

<%= form_for ([@user, @project]) do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :description %>:
  <%= f.text_area :description %><br />

  <div class="field">
    <%= f.label :avatar, class:"upload_pic_label" %><br />
    <%= f.file_field :avatar, class:"upload_pic"%>
  </div>
  <%= f.submit %>
<% end %>
